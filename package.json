{
  "name": "project-cintamani",
  "version": "1.0.0",
  "description": "Node Express React Heroku Full-Stack Web Application",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sporego/project-cintamani.git"
  },
  "keywords": [
    "Node",
    "React",
    "Bootstrap",
    "Fullstack",
    "Web",
    "Application",
    "Heroku"
  ],
  "author": "Filbert Shi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sporego/project-cintamani/issues"
  },
  "homepage": "https://github.com/Sporego/project-cintamani#readme",
  "dependencies": {
    "express": "^4.17.1",
    "if-env": "^1.0.4"
  }
}
